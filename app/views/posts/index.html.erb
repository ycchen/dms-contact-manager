<div class="root">
  <div class="row">
    <div class="span12">
      <div class="grey-box">
        <div class="page-header">
            
          <h1>Listing posts</h1>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>Contact By</th>
                <th>Contact</th>
                <th>Company</th>
                <th>Title</th>
                <th>Body</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.user.display_name %></td>
                  <td><%= post.contact.last_name %>, <%= post.contact.first_name %></td>
                  <td><%= post.contact.company %></td>
                  <td><%= post.title %></td>
                  <td><%= post.body %></td>
                  <td><%= link_to 'Show', post, class: "btn btn-primary"%></td>
                  <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %></td>
                  <td><%= link_to 'Destroy', post, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Post', new_post_path %>
      </div>      
    </div>
  </div>
</div>